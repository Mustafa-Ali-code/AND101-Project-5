<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nasaimg" />

    <TextView
        android:id="@+id/apodtext1"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:textColor="@color/black"
        android:textCursorDrawable="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/apodtext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:background="@drawable/rounded_edittext"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/apodtext1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show more"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/apodtext2"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/button"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:text="Get Random Astronomy Picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apodtext2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>